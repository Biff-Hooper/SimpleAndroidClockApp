<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item android:left="8dp"
                android:right="8dp"
                android:top="30dp">
                <shape>
                    <solid android:color="@color/HandStick"></solid>
                    <size
                        android:width="1dp"
                        android:height="100dp"/>
                </shape>
            </item>

            <!-- SHADOW -->
            <item
                android:bottom="200dp"
                android:left="3dp"
                android:right="3dp"
                android:top="21dp"

                >
                <shape
                    android:shape="rectangle"
                    android:useLevel="false"
                    >

                    <solid
                        android:color="@color/shadow1"
                        />

                    <corners
                        android:radius="100dp"
                        />

                </shape>
            </item>

            <!-- shadow inner -->
            <item
                android:bottom="201dp"
                android:top="22dp"
                android:right="4dp"
                android:left="4dp">
                <shape
                    android:shape="rectangle"
                    android:useLevel="false"
                    >

                    <solid
                        android:color="@color/shadow2"
                        />

                    <corners
                        android:radius="100dp"
                        />

                </shape>
            </item>

            <!-- Main -->
            <item
                android:bottom="202dp"
                android:right="6dp"
                android:left="6dp"
                android:top="23dp"
                >

                <shape
                    android:shape="rectangle"
                    android:useLevel="false"
                    >

                    <solid
                        android:color="@color/hand"
                        />

                    <size
                        android:width="1dp"
                        android:height="40dp"
                        />

                    <corners
                        android:radius="100dp"
                        />

                </shape>
            </item>


        </layer-list>
    </item>
</selector>